<html>
<head>
    <title>N-Body</title>

    <style>
        body { margin: 0; }
        canvas { width: 100%; height: 100% }
    </style>
</head>
<body>
<div>
    <p id = "orbital">
        Orbital Information
    </p>
    <table id = "orbital_params">
        <thead>
        <tr>
            <th>PARAMETER</th>
            <th><em>x</em></th>
            <th><em>y</em></th>
            <th><em>z</em></th>
        </tr>
        </thead>

        <tbody>
        <tr>
            <td>Position vector (AU)</td>
            <td><input type="text" name="x1" value="x1"> </td>
            <td><input type="text" name="y1" value="y1"></td>
            <td><input type="text" name="z1" value="z1"></td>
        </tr>
        <tr>
            <td>Velocity vector (km/s)</td>
            <td><input type="text" name="x1" value="x1"></td>
            <td><input type="text" name="y1" value="y1"></td>
            <td><input type="text" name="z1" value="z1"></td>
        </tr>
        <tr>
            <td>Body mass (Earth Masses)</td>
            <td><input type="text" name="m1" value="m1"></td>
        </tr>

        </tbody>

    </table>

</div>


<script src="build/three.js"></script>
<script src="build/OrbitControls.js"></script>
<script>
    var scene = new THREE.Scene();
    var camera = new THREE.PerspectiveCamera( 75, window.innerWidth/window.innerHeight, 0.1, 1000 );

    var renderer = new THREE.WebGLRenderer();
    renderer.setSize( window.innerWidth, window.innerHeight );
    document.body.appendChild( renderer.domElement );



    camera.position.z = 400;

    document

    var render = function () {
        requestAnimationFrame( render );

        var sphereNumber = 5;
     for (i = 0; i < sphereNumber; i++) {

//        sphere.rotation.x += 0.01;
//        sphere.rotation.y += 0.01;
         var x = 5 + 20 * i;
         var y = 7;
         var z = 8;
         var mass = 10;
         var radius = mass;
         var geometry = new THREE.SphereGeometry(radius, 32, 32);
         var material = new THREE.MeshBasicMaterial({color: 0xffff00});
         var sphere = new THREE.Mesh(geometry, material);
         scene.add(sphere);

         sphere.position.set(x*i, y, z);
     }

        controls = new THREE.OrbitControls( camera, renderer.domElement );
        //controls.addEventListener( 'change', render ); // add this only if there is no animation loop (requestAnimationFrame)
        controls.enableDamping = false;
        controls.dampingFactor = .25;
        controls.enableZoom = false;
        controls.rotateSpeed = 0.05;

        renderer.render(scene, camera);
    };

    render();
</script>
</body>
</html>